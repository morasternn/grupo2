

<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
	
		<%- include("./partials/headerLogueado") %>	
	 <% } else{%>
		<%- include("./partials/header") %>	
		<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if (usuario.foto.includes("/images/users")) { %>
					<img src="<%= usuario.foto %>" alt="foto de perfil" class="foto-perfil">
				<% } else { %>
					<img src="/images/users/<%= usuario.foto %>" alt="foto de perfil" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
            			<%= usuario.usuario %>
						<a href="/users/profile" class="editar-icono"> 
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p><%= usuario.email %></p>
					<ul class="">
						<li><%= usuario.productos.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= usuario.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<% if (productos[i].imagen.includes("/images/products")) { %>
									<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
								<% } else { %>
									<img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
								<% } %>
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>Comentarios: <%= productos[i].comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>
