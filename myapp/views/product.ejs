<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="product-header-inline">
			<h2 class="products-title-inline"><%= producto.nombre %></h2>
			<a href="/producto/agregarproducto" class="editar-link">Editar</a>
		  </div>
		  
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.imagen %>" alt=" <%= producto.nombre %>" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">

						<%for (let i = 0; i < producto.comentarios.length; i++) { %>
							<article>
							<img src="<%= producto.comentarios[i].imagen %>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile"><%= producto.comentarios[i].usuario %> </a> </strong>
								<%= producto.comentarios[i].comentario %></p>
							</div>
							</article>
						<% } %>

					</section>
					<form class="form" action="/producto/agregarproducto" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>